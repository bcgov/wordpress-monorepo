{
    "name": "bcgov-plugin/wordpress-search",
    "description": "WordPress Search Plugin",
    "type": "wordpress-plugin",
    "license": "Apache-2.0",
    "version": "1.1.0",
    "repositories": [
        {
            "type": "path",
            "url": "../../packages/phpunit-config",
            "options": {
                "symlink": false
            }
        }
    ],
    "require-dev": {
        "wordpress-monorepo/phpunit-config": "dev-main",
        "yoast/phpunit-polyfills": "^1.0",
        "composer/composer": "^2.9.3",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "Bcgov\\WordpressSearch\\": "src/",
            "Bcgov\\WordpressSearch\\Test\\": "tests/php/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit --configuration vendor/wordpress-monorepo/phpunit-config/phpunit.integration.xml"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
