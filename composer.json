{
    "name": "bcgov/wordpress-monorepo",
    "description": "A monorepo for BC government WordPress plugins and themes",
    "license": "Apache-2.0",
    "scripts": {
        "lint:php": [
            "vendor/bin/phpcs -ps ."
        ],
        "fix:php": [
            "vendor/bin/phpcbf -ps ."
        ]
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
